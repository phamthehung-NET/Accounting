@page "/"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Localization;
@namespace Accounting.Pages
@inject IStringLocalizer<Resource> LRes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/accounting/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Accounting.styles.css" rel="stylesheet" />
    <link href="~/css/fontawesome6pro/css/all.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <link rel="stylesheet" href="_content/BlazorDateRangePicker/daterangepicker.min.css" />
    <script src="_content/BlazorDateRangePicker/clickAndPositionHandler.js"></script>
    @*<script src="~/js/bootstrap.min.js"></script>*@
    <script src="~/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/jquery-3.6.3.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/ChartJsBlazorInterop.js"></script>
    <script src="~/js/ChartJsBlazor/Chart.min.js"></script>
    <script src="~/js/chart.js/Chart.min.js"></script>
    @* <script src="/accounting/_content/Append.Blazor.Printing/scripts.js" type="module"></script> *@
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            @LRes["ProductCommonError"]
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    @*<script src="/js/"></script>*@
</body>
</html>
