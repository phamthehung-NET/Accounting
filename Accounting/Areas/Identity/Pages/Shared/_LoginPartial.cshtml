@using Accounting.Model;
@using Accounting.Pages;
@using Accounting.Utilities;
@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization;
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager
@inject IStringLocalizer<Resource> LRes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" title="Manage">@LRes["Hello"] @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="@Constants.Logout" asp-route-returnUrl="@("/")" method="post">
            <button  type="submit" class="nav-link btn btn-link text-dark">@LRes["Log out"]</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" href="@(Constants.SystemPrefix + "/")">@LRes["Home"]</a>
    </li>
    @*<li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">@LRes["Log in"]</a>
    </li>*@
}
</ul>
