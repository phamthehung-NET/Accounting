<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" class="nav-link ms-0">Hello, @context.User.Identity?.Name</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="btn nav-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        @*<a href="Identity/Account/Register">Register</a>*@
        <a href="Identity/Account/Login" class="nav-link ms-0">Log in</a>
    </NotAuthorized>
</AuthorizeView>
