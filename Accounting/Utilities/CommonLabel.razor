<h3><span class=@("border-start border-5 me-2 border-" + Color)></span>
    @if(HeaderContent != null)
    {
        @HeaderContent;
    }
    else
    {
        @DisplayText;
    }
</h3>

@code {
    [Parameter]
    public string DisplayText { get; set; }

    [Parameter]
    public string Color { get; set; }

    [Parameter]
    public RenderFragment HeaderContent { get; set; }
}
